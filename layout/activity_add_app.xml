<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddAppActivity">

    <EditText
        android:id="@+id/patient_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your ID"
        android:layout_margin="5dp" />


    <EditText
        android:id="@+id/patient_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_margin="5dp"
        android:layout_below="@+id/patient_id" />
    <EditText
        android:id="@+id/doctor_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doctor ID"
        android:layout_margin="5dp"
        android:layout_below="@+id/patient_pass" />

    <EditText
        android:id="@+id/symptom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Symptoms"
        android:layout_margin="5dp"
        android:layout_below="@+id/doctor_id" />

    <Button
        android:id="@+id/btn_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symptom"
        android:layout_margin="5dp"
        android:text="Book Appointment" />

</RelativeLayout>