<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".PatientLoginActivity">

    <EditText
        android:id="@+id/patient_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient ID"
        android:layout_margin="50dp" />

    <EditText
        android:id="@+id/patient_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="50dp"
        android:layout_below="@+id/patient_id"/>

    <Button
        android:id="@+id/btn_patient_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login!"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/patient_password" />

</RelativeLayout>