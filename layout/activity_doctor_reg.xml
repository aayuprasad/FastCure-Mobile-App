<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".DoctorRegActivity">

    <EditText
        android:id="@+id/doctor_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_margin="2dp" />

    <EditText
        android:id="@+id/doctor_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_first_name" />

    <EditText
        android:id="@+id/doctor_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_last_name" />

    <EditText
        android:id="@+id/doctor_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:layout_margin="5dp"
        android:layout_below="@+id/doctor_age" />

    <EditText
        android:id="@+id/doctor_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_gender" />

    <EditText
        android:id="@+id/doctor_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_street" />

    <EditText
        android:id="@+id/doctor_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_city" />

    <EditText
        android:id="@+id/doctor_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pin"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_state" />

    <EditText
        android:id="@+id/doctor_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_pin" />

    <EditText
        android:id="@+id/doctor_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="2dp"
        android:layout_below="@+id/doctor_department" />

    <Button
        android:id="@+id/btn_doctor_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_password"
        android:layout_margin="2dp"
        android:text="Register Doctor" />

</RelativeLayout>