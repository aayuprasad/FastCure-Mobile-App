<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/patient_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient ID"
        android:layout_margin="50dp" />

    <Button
        android:id="@+id/viewtracker"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@+id/patient_id2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="View Health Tracker of a Patient" />

    <Button
        android:id="@+id/viewapp"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@+id/viewtracker"
        android:layout_marginTop="17dp"
        android:text="View Appointments" />
    <Button
        android:id="@+id/addpre"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@+id/viewapp"
        android:layout_marginTop="17dp"
        android:text="Add Prescription" />

    <Button
        android:id="@+id/btn_doctor_logout"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/addpre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="Logout"
        android:textAlignment="center" />
</RelativeLayout>